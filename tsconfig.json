{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "baseUrl": "src",
    "paths": {
      "api": ["api"],
      "api/*": ["api/*"],
      "assets": ["assets"],
      "assets/*": ["assets/*"],
      "constants": ["constants"],
      "constants/*": ["constants/*"],
      "common": ["common"],
      "common/*": ["common/*"],
      "hooks": ["hooks"],
      "hooks/*": ["hooks/*"],
      "layouts": ["layouts"],
      "layouts/*": ["layouts/*"],
      "modules": ["modules"],
      "modules/*": ["modules/*"],
      "pages": ["pages"],
      "pages/*": ["pages/*"],
      "routes": ["routes"],
      "routes/*": ["routes/*"],
      "store": ["store"],
      "store/*": ["store/*"],
      "types": ["types"],
      "types/*": ["types/*"],
      "utils": ["utils"],
      "utils/*": ["utils/*"],
      "validators": ["validators"],
      "validators/*": ["validators/*"]
    }
  },
  "include": ["src"]
}
